<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="applico.googlezlpreview" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GlobalActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.GlobalDetailsActivity"
            android:label="@string/title_activity_global_details" >
        </activity>
        <activity
            android:name=".activities.BaseDrawerActivity"
            android:label="@string/title_activity_base_drawer" >
        </activity>
        <activity
            android:name=".activities.BaseDrawerFragmentActivity"
            android:label="@string/title_activity_base_drawer_fragment" >
        </activity>
        <activity
            android:name=".activities.FabTestDriver"
            android:label="@string/title_activity_base_drawer_fragment" >
        </activity>
    </application>

    <supports-screens
        android:anyDensity="false"
        android:largeScreens="true"
        android:requiresSmallestWidthDp="600" />

</manifest>
